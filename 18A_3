#include <stdio.h>
#include <stdlib.h>

//calculate profit or loss

int main()
{
    float cp, sp, pl;

    printf("\n Enter the cost price and selling price of the item: ");
    scanf("%f%f", &cp, &sp);

    pl = sp - cp; //SellingPrice - CostPrice

    (pl>0?(printf("The seller has made a profit of $%f\n", pl)):
    (pl<0?(printf("The seller has incurred a loss by $%f", pl*-1)):
    (printf("There is no loss, no profit\n"))));
}
