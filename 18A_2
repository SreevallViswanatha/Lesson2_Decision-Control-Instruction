#include <stdio.h>
#include <stdlib.h>
//Quick demo of nested if-else:
int main()
{
    int i;

    printf("Enter either 1 or 2: ");
    scanf("%d", &i);

    (i == 1? (printf("You would go to heaven!\n")):
    (i ==2? (printf("Hell was created with you in mind\n")):
    printf("How about mother earth !\n")));
}
