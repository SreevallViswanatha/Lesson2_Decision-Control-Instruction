#include <stdio.h>
#include <stdlib.h>

//Check whether a number is even or odd.

int main()
{
    int n;
    
    printf("\nEnter any number");
    scanf("%d", &n);
    
    if(n%2==0)//remainder after division by 2
        printf("\nThe number is even\n");
    else
        printf("\nThe number is odd\n");
}
