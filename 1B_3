#include <stdio.h>
#include <stdlib.h>

//calculate profit or loss

int main()
{
    float cp, sp, p, l;
    
    print("\n Enter the cost price and selling price of the item: ");
    scanf("%f%f", &cp, &sp);
    
    p = sp - cp; //Profit = SellingPrice - CostPrice
    l = cp - sp; //Loss = CostPrice - SellingPrice
    
    if (p>0)
        printf("The seller has made a profit of $%f\n", p)        
    if(l>0)
       printf("The seller has incurred a loss by $%f", l);
    if(p==0)
        printf("There is no loss, no profit\n");    
    
}
