#include <stdlib.h>
//determine if the number is divisible by 3, 5
int main()
{

    int num;

    printf("Enter a number: ");
    scanf("%d", &num);


    if(num%3 == 0 && num%5 == 0)
    {
        printf("The number : %d is divisible by 3 as well as 5", num);
    }
    else
    {
        if(num%3 == 0)
            printf("The number : %d is divisible only by 3", num);
        else if(num%5 == 0)
            printf("The number: %d is divisible only by 5", num);
        else
            printf("The number: %d is neither divisible by 3 nor 5", num);
    }
}
