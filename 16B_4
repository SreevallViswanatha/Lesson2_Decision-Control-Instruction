#include <stdio.h>
#include <stdlib.h>

//Determine whether sum of squares of sine and cosine of an angle is equal to 1
int main()
{
   int angle;
   float sum;

   printf("Enter angle in degrees: ");
   scanf("%d", &angle);

   angle = angle * 3.14/180;
   sum = (pow(sin(angle), 2)+ pow(cos(angle), 2));

   if(sum == 1)
    printf("Sum of squares of sine and cosine is equal to 1");
   else
    printf("Sum of squares of sine and cosine is not equal to 1");
}
