//Check whether a triangle is valid or not..

int main()
{
    float angle1, angle2, angle3;

    printf("\nEnter the first angle of a triangle : ");
    scanf("%f", &angle1);

    printf("\nEnter the second angle of a triangle : ");
    scanf("%f", &angle2);

    printf("\nEnter the third angle of a triangle : ");
    scanf("%f", &angle3);

    if((angle1+angle2+angle3) == 180)
        printf("\nThe triangle is a *valid* triangle\n");
    else
        printf("\nThe triangle is an *invalid* triangle\n");
}
