#include <stdio.h>
#include <stdlib.h>
//Calculation of bonus
int main()
{
    int bonus, cy, yoj, yos;
    printf("Enter the current year and the year of joining: ");
    scanf("%d%d", &cy, &yoj);

    yos = cy - yoj;

    if(yos>3)
    {
        bonus = 2500;
        printf("Bonus = $%d\n", bonus);
    }
}
