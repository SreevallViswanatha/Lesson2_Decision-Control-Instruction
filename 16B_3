#include <stdio.h>
#include <stdlib.h>

//Greatest of the three numbers using conditional operators.
int main()
{
    int n1, n2, n3, greatest;

    printf("Enter the first number: ");
    scanf("%d", &n1);

    printf("Enter the second number: ");
    scanf("%d", &n2);

    printf("Enter the third number: ");
    scanf("%d", &n3);

    greatest = n1>n2?(n1>n3?n1:n3):(n2>n3?n2:n3);

    printf("Greatest of the three numbers is: %d", greatest);
}
